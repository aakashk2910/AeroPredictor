<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/touch_selector"
    android:padding="@dimen/dimen_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stock_symbol"
        style="@style/TextStyle.ListItem.Title"
        tools:text="AXAS"
        />

    <TextView
        android:id="@+id/stock_exch"
        tools:text="NYQ"
        style="@style/TextStyle.ListItem.Body"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/stock_name"
        android:layout_marginTop="@dimen/dimen_xsmall"
        style="@style/TextStyle.ListItem.Body"
        tools:text="Abraxas Petroleum Corp."
        android:layout_below="@id/stock_symbol"
        />


</RelativeLayout>